<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>MGX-gui</artifactId>
        <groupId>de.cebitec.mgx.gui</groupId>
        <version>2.0</version>
    </parent>

    <groupId>de.cebitec.mgx.gui</groupId>
    <artifactId>MGX-Controller</artifactId>
    <version>2.0</version>
    <packaging>bundle</packaging>

    <name>MGX-Controller</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <artifactId>MGX-DTO</artifactId>
            <groupId>de.cebitec.mgx</groupId>
        </dependency>
        <dependency>
            <artifactId>MGX-client</artifactId>
            <groupId>de.cebitec.mgx.client</groupId>
        </dependency>
        <dependency>
            <artifactId>MGX-parallelPropChange</artifactId>
            <groupId>de.cebitec.mgx</groupId>
        </dependency>
        <dependency>
            <artifactId>GPMS-core-api</artifactId>
            <groupId>de.cebitec.gpms</groupId>
        </dependency>
        <dependency>
            <artifactId>MGX-isequences</artifactId>
            <groupId>de.cebitec.mgx</groupId>
        </dependency>
        <dependency>
            <groupId>de.cebitec.mgx.gui</groupId>
            <artifactId>MGX-API</artifactId>
        </dependency>
        <dependency>
            <groupId>de.cebitec.mgx.gui</groupId>
            <artifactId>MGX-Datamodel</artifactId>
        </dependency>
        <dependency>
            <groupId>de.cebitec.gpms</groupId>
            <artifactId>GPMS-rest-api</artifactId>
        </dependency>
        <dependency>
            <groupId>de.cebitec.mgx</groupId>
            <artifactId>NewickParser</artifactId>
        </dependency>
        <dependency>
            <groupId>de.cebitec.mgx</groupId>
            <artifactId>Trove-OSGi</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        
        <!--
         <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
            <version>1.3.7</version>
        </dependency>
        -->
        
        <dependency>
            <groupId>de.cebitec.mgx</groupId>
            <artifactId>MGX-common</artifactId>
        </dependency>
        <dependency>
            <groupId>de.cebitec.mgx.gui</groupId>
            <artifactId>MGX-DataFactories</artifactId>
        </dependency>
        <dependency>
            <groupId>de.cebitec.mgx.gui</groupId>
            <artifactId>MGX-TestUtils</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>de.cebitec.mgx.gui</groupId>
            <artifactId>MGX-VizFilter</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi.core</artifactId>
            <version>8.0.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies> 

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>manifest</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <instructions>
                        <Export-Package>
                            de.cebitec.mgx.gui.controller,
                            de.cebitec.mgx.gui.util
                        </Export-Package>
                        <Import-Package>
                            org.osgi.framework,
                            de.cebitec.gpms.core,
                            de.cebitec.gpms.rest,
                            de.cebitec.mgx.dto,
                            de.cebitec.mgx.client,
                            de.cebitec.mgx.client.access.rest,
                            de.cebitec.mgx.client.access.rest.util,
                            de.cebitec.mgx.client.datatransfer,
                            de.cebitec.mgx.client.exception,
                            de.cebitec.mgx.api,
                            de.cebitec.mgx.api.access,
                            de.cebitec.mgx.api.access.datatransfer,
                            de.cebitec.mgx.api.exception,
                            de.cebitec.mgx.api.model,
                            de.cebitec.mgx.api.model.qc,
                            de.cebitec.mgx.api.groups,
                            de.cebitec.mgx.api.misc,
                            de.cebitec.mgx.gui.datamodel,
                            de.cebitec.mgx.gui.datamodel.qc,
                            de.cebitec.mgx.gui.datamodel.tree,
                            de.cebitec.mgx.gui.datamodel.misc,
                            de.cebitec.mgx.gui.datamodel.assembly,
                            de.cebitec.mgx.api.model.assembly,
                            de.cebitec.mgx.api.model.assembly.access,
                            de.cebitec.mgx.common,
                            de.cebitec.mgx.sequence,
                            de.cebitec.mgx.seqcompression,
                            de.cebitec.mgx.gui.datafactories,
                            gnu.trove.map,
                            gnu.trove.map.hash,
                            com.google.common.cache,
                            com.google.protobuf
                        </Import-Package>
                        <Bundle-Activator>de.cebitec.mgx.gui.controller.Activator</Bundle-Activator>
                    </instructions>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.src.version}</source>
                    <target>${java.target.version}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.2</version>
                <configuration>
                    <!-- <parallel>classes</parallel>
                    <threadCount>3</threadCount> -->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
